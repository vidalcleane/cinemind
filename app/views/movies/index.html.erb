<style>
  .hero-section {
    position: relative;
    height: 70vh;
    background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(15,23,42,0.9)), 
                url('https://images.unsplash.com/photo-1536440136628-849c177e76a1?w=1920');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    margin: -3rem -2rem 3rem -2rem;
    padding: 0 4rem;
  }
  
  .hero-content {
    max-width: 600px;
    color: white;
    animation: fadeInUp 0.8s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 10px rgba(0,0,0,0.8);
  }
  
  .hero-content p {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    text-shadow: 1px 1px 5px rgba(0,0,0,0.8);
  }
  
  .hero-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .btn-hero {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .btn-play {
    background: white;
    color: black;
  }
  
  .btn-play:hover {
    background: rgba(255,255,255,0.8);
    transform: scale(1.05);
  }
  
  .btn-info {
    background: rgba(109, 109, 110, 0.7);
    color: white;
  }
  
  .btn-info:hover {
    background: rgba(109, 109, 110, 0.4);
  }
  
  .section-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
    margin-top: 3rem;
  }
  
  .movies-row {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }
  
  .movie-card {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    background: #1e293b;
  }
  
  .movie-card:hover {
    transform: scale(1.08) translateY(-10px);
    z-index: 10;
    box-shadow: 0 15px 40px rgba(0,0,0,0.8);
  }
  
  .movie-poster {
    position: relative;
    width: 100%;
    aspect-ratio: 2/3;
    overflow: hidden;
  }
  
  .movie-poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s;
  }
  
  .movie-card:hover .movie-poster img {
    transform: scale(1.1);
  }
  
  .movie-poster-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
  }
  
  .movie-info {
    padding: 1rem;
    background: linear-gradient(to top, #0f172a 0%, transparent 100%);
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    transform: translateY(100%);
    transition: all 0.3s;
  }
  
  .movie-card:hover .movie-info {
    transform: translateY(0);
  }
  
  .movie-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .movie-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.85rem;
    color: #94a3b8;
    margin-bottom: 0.5rem;
  }
  
  .movie-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
    margin-bottom: 0.8rem;
  }
  
  .category-badge {
    background: rgba(239, 68, 68, 0.2);
    border: 1px solid #ef4444;
    color: #fca5a5;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 600;
  }
  
  .movie-actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .btn-action {
    flex: 1;
    padding: 0.6rem;
    border-radius: 6px;
    text-align: center;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.3s;
  }
  
  .btn-watch {
    background: #ef4444;
    color: white;
  }
  
  .btn-watch:hover {
    background: #dc2626;
    transform: translateY(-2px);
  }
  
  .btn-edit {
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
    border: 1px solid #fbbf24;
  }
  
  .btn-edit:hover {
    background: rgba(251, 191, 36, 0.4);
  }
  
  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    color: #64748b;
  }
  
  .empty-state-icon {
    font-size: 6rem;
    margin-bottom: 1.5rem;
    opacity: 0.3;
  }
  
  .empty-state h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #94a3b8;
  }
  
  .empty-state p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .hero-section {
      height: 50vh;
      padding: 0 2rem;
    }
    
    .hero-content h1 {
      font-size: 2.5rem;
    }
    
    .hero-content p {
      font-size: 1rem;
    }
    
    .movies-row {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }
    
    .section-title {
      font-size: 1.4rem;
    }
  }
</style>

<!-- Hero Section -->
