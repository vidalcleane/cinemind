<div class="max-w-3xl mx-auto p-6">
  <%= link_to "← Voltar", movies_path, class: "text-blue-600 hover:text-blue-700 mb-6 inline-block" %>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">📤 Importar Filmes via CSV</h1>

    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
      <p class="text-blue-700"><strong>💡 O CSV deve ter:</strong> title, synopsis, year, duration, director, categories</p>
    </div>

    <%= form_with(model: @movie_import, local: true, html: { multipart: true }) do |f| %>
      <div class="mb-4">
        <%= f.label :file_name, "Nome da Importação" %>
        <%= f.text_field :file_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg", placeholder: "Ex: Meus Filmes" %>
      </div>

      <div class="mb-6">
        <%= f.label :csv_file, "Arquivo CSV" %>
        <%= f.file_field :csv_file, accept: ".csv", class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
      </div>

      <div class="flex gap-4">
        <%= link_to "Cancelar", movies_path, class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300" %>
        <%= f.submit "🚀 Importar", class: "px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-semibold cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
