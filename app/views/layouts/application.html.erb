        <% if user_signed_in? %>
          <li><%= link_to "âž• Novo Filme", new_movie_path %></li>
          <li><%= link_to "ðŸ“¤ Importar CSV", new_movie_import_path %></li>
          <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Entrar", new_user_session_path, class: "btn-primary" %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <% if notice %>
